<Page loaded="myPageWasLoaded">
    <StackLayout>
        <Label text="Two-way data-binding!" class="h2" />
        <Label text="{{ message1 }}" id="message1"/>
        <Label text="{{ message2 }}" id="textfieldname"/>
        <Label text="{{ name }}" id="textfieldname"/>

        <TextField text="{{ name }}" returnPress="onTextField"  hit="Enter your name!"/>
    </StackLayout>

</Page>
